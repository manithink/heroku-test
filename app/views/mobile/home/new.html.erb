<!--login starts-->
<div class="wrapper">
<section id="login-wrapper">
	<h1><%= image_tag "m-login-logo.png" %></h1>
	<div id="login-here">
		<div class="login-box company">
			<h3>Login</h3>
			<p class="flash-error-home"><%= flash[:alert].nil? ? "&nbsp;".html_safe : flash[:alert] %></p>
			<%= form_tag mobile_login_path, id: "login-form" do %>
				<div class="row">
					<%= text_field_tag 'user[email]', nil, placeholder: "Email", id: "email" %>
					<%= password_field_tag 'user[password]', nil, placeholder: "Password", id: "password" %>
					<%=  submit_tag 'Login', class: "submit" %>
				</div>
			<% end %>
			<div class="row forgot-psd"><a href="">Forgot Password</a></div>
		</div>
	</div>
</section>


<!--login ends-->
<script type="text/javascript">

	$(function(){

		var format = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    $("#login-form").submit(function(event){
      // $("p.error-home, p.flash-error-home").html("&nbsp;");
      if($.trim($("#email").val())==""){
        event.preventDefault()
        $("p.flash-error-home").html("Email can't be blank");
      }
      else if(!(format.test($("#email").val()))){
        event.preventDefault()
        $("p.flash-error-home").html("Invalid email");
      }
      else if($.trim($("#password").val())==""){
          event.preventDefault()
          $("p.flash-error-home").html("Password can't be blank");
      }
  	});

	});

</script>

