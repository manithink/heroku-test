<script type="text/javascript">
  var player;
  var playStatus = 1
  var format = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;

  $("#get_more_info").submit(function(e){
    $("div.error-home").html("&nbsp;");
    if($.trim($("#name").val())==""){
        e.preventDefault();
        $("div.error-home").html("Name can't be blank");
    }
    else if($.trim($("#email").val())==""){
      e.preventDefault();
      $("div.error-home").html("Email can't be blank");
    }
    else if(!(format.test($("#email").val()))){
      e.preventDefault();
      $("div.error-home").html("Invalid email");
    }
  })
function loadYtVideo(){
 var tag = document.createElement('script');
  tag.src = "https://www.youtube.com/player_api";
  var firstScriptTag = document.getElementsByTagName('script')[0];
  firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
}

onYouTubePlayerAPIReady = function() {
    player = new YT.Player('ytContent', {
      height: '390',
      width: '640',
      videoId: "<%=video_id%>"
    });

  }

  loadYtVideo();

    $(".close").click(function(e) {
      e.preventDefault()
      var video_id  = "<%=video_id%>"
      player.seekTo(0);
      player.stopVideo();
      $("#care-clients").fadeOut("normal");
      $("#youtube_container").fadeOut("normal"); // fadein popup div
      $("#backgroundPopup").fadeOut("normal");
      $("#ytContent").hide();
  });

  $("a.to_popup").click(function() {
      $("div.loader").show();
      $("#ytContent").show();
      setTimeout(function(){ // then show popup, deley in .5 second
        $("div.loader").fadeOut('normal');
        $("#care-clients").fadeIn(0500); // fadein popup div
        $("#youtube_container").fadeIn(0500); // fadein popup div
        $("#backgroundPopup").css("opacity", "0.7"); // css opacity, supports IE7, IE8
        $("#backgroundPopup").fadeIn(0001); // function show popup
      }, 500); // .5 second
  return false;
  });

</script>
