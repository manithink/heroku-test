<div id="outer-wrapper">
  <h1 id="login-logo"><%= link_to image_tag("devise-logo.png", :width => "141", :height => "60"), web_root_path%></h1>
  <div id="login-wrapper">
    <div id="login-cnt">
      <h2>Forgot your password?</h2>

      <div id="login_error">
        <%= devise_error_messages! %>
      </div>
      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name),:validate => false, :html => { :method => :post, :id => 'password_reset', :class => 'password_reset' }) do |f| %>
        <div class="row-box">
          <%= f.text_field :email, :autofocus => true, placeholder: "Enter your Email" %>
        </div>

        <div class="row-box">
          <%= f.submit "Send Email" , :class => "farCare-btn login"%>
        </div>

      <% end %>

      <div class="login-btm-bg">
        <%= image_tag "login-btm-bg.png", :width => "391", :height => "6" %>
      </div>
    </div>
  </div>
  <div id="login-footer">
    <p>Â©2014 HomaCare All rights reserved</p>
  </div>
</div>







